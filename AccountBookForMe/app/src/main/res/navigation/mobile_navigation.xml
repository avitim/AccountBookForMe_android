<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_expenses">

    <fragment
        android:id="@+id/navigation_expenses"
        android:name="com.example.accountbookforme.fragment.ExpensesFragment"
        android:label="@string/title_expenses"
        tools:layout="@layout/fragment_list_with_month" />

    <fragment
        android:id="@+id/navigation_categories"
        android:name="com.example.accountbookforme.fragment.CategoriesFragment"
        android:label="@string/title_categories"
        tools:layout="@layout/fragment_filter_list" />

    <fragment
        android:id="@+id/navigation_payments"
        android:name="com.example.accountbookforme.fragment.PaymentsFragment"
        android:label="@string/title_payments"
        tools:layout="@layout/fragment_filter_list" />

    <fragment
        android:id="@+id/navigation_stores"
        android:name="com.example.accountbookforme.fragment.StoresFragment"
        android:label="@string/title_stores"
        tools:layout="@layout/fragment_filter_list" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.accountbookforme.fragment.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />

</navigation>